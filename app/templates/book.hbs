<div class="panel-heading">
    <div class="search">
        <input type="text" placeholder="Search by Title or ISBN" value={{this.search}} {{on "input" this.updateSearch}}>
    </div>

    <LinkTo @route="book.create" class="btn-new">
        <div class="sr-only">Add New Book</div>
    </LinkTo>
</div>

<div class="panel-content">
    <h3 class="panel-title">Books</h3>

    <ul class="collection">
        {{#each @model as |book|}}
            <li>
                <LinkTo @route="book.detail" @model={{book.id}}>
                    <span class="book-title">{{book.title}}</span>
                    <em class="book-isbn">{{book.isbn}}</em>
                </LinkTo>
            </li>
        {{/each}}
    </ul>
</div>

{{outlet}}