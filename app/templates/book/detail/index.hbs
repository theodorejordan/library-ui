<div class="slide-out-content">
    <div class="title">
        <h3 value="zae">{{@model.reviews.length}} {{if "{{@model.reviews.length}}>1" "review" "reviews"}}</h3>

        <div class="actions">
            <LinkTo @route="book.detail.new-review" @model={{@model.id}} class="btn-secondary btn-add btn">
                Add your review
            </LinkTo>
        </div>
    </div>

    <ul class="review-list">
        {{#each @model.reviews as |review|}}
            <li class="review">
                <p>{{review.body}}</p>

                <div class="details">
                    <p class="review-user">{{review.user}}</p>
                    <p class="review-time">{{moment-from review.createdAt}}</p>
                </div>
            </li>
        {{/each}}
    </ul>
</div>