<div class="slide-out-bg"></div>

<div class="slide-out">
    <div class="slide-out-card">
        <LinkTo @route="author" class="btn-back">
            <span class="sr-only">Back</span>
        </LinkTo>

        <div class="slide-out-heading">
            <div class="title">
                <h3> {{@model.last}}, {{@model.first}}</h3>

                <div class="actions">
                    <LinkTo @route="author.edit" @model={{@model}} class="btn-pop">edit</LinkTo>
                    <button class="btn-recessed" onclick={{action 'deleteAuthor' @model}} type="button">Delete</button>
                </div>
            </div>
        </div>

        <div class="actions">
            <LinkTo @route='author.detail.new-book' @model={{@model}} class="btn-secondary btn-add">Add a book</LinkTo>
        </div>

        <div class="slide-out-content">
            <div class="title">
                <h3>{{@model.books.length}} books from this author.</h3>
            </div>

            <ul class="book-list">
                {{#each @model.books as |book|}}
                    <li class="book">
                        <p class="book-title">
                            <LinkTo @route='book.detail' @model={{book.id}}>{{book.title}}</LinkTo>
                        </p>
                        <p class="book-isbn">{{book.isbn}}</p>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

{{outlet}}